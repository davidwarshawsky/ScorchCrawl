{
  "name": "scorchcrawl-mcp",
  "version": "1.0.0",
  "description": "Open-source Copilot SDK-compliant MCP server for web scraping with stealth bot-detection bypass.",
  "type": "module",
  "bin": {
    "scorchcrawl-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "start": "node dist/index.js",
    "start:server": "HTTP_STREAMABLE_SERVER=true node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "prepare": "npm run build"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "@mendable/firecrawl-js": "^4.9.3",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.2",
    "firecrawl-fastmcp": "^1.0.4",
    "turndown": "^7.2.2",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "scorchcrawl",
    "web-scraping",
    "copilot",
    "copilot-sdk",
    "stealth",
    "bot-detection-bypass",
    "crawler",
    "content-extraction"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/user/scorchcrawl.git"
  },
  "author": "ScorchCrawl Contributors",
  "homepage": "https://github.com/user/scorchcrawl#readme",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "@types/uuid": "^10.0.0",
    "vitest": "^3.2.1"
  }
}
